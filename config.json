{
  "$schema": "https://raw.githubusercontent.com/rubiin/HyDePanel/refs/heads/master/hydepanel.schema.json",
  "theme": {
    "name": "catpuccin-mocha"
  },
  "options": {
    "screen_corners": false,
    "check_updates": true
  },
  "layout": {
    "left_section": ["workspaces", "window_title"],
    "middle_section": ["date_time"],
    "right_section": [
      "updates",
      "bluetooth",
      "volume",
      "battery",
      "system_tray",
      "power"
    ]
  },
  "weather": {
    "detect_location": false,
    "location": "kathmandu",
    "label": true,
    "tooltip": true,
    "interval": 700000
  },
  "hypr_sunset": {
    "temperature": "2800k",
    "enabled_icon": "󱩌",
    "disabled_icon": "󰛨",
    "icon_size": "12px",
    "label": true,
    "tooltip": true,
    "interval": 2000
  },
  "hypr_idle": {
    "enabled_icon": "",
    "disabled_icon": "",
    "icon_size": "12px",
    "label": true,
    "tooltip": true,
    "interval": 2000
  },
  "battery": {
    "label": true,
    "tooltip": true
  },
  "cpu": {
    "icon": "",
    "icon_size": "12px",
    "label": true,
    "tooltip": true
  },
  "memory": {
    "icon": "",
    "icon_size": "12px",
    "label": true,
    "tooltip": true
  },
  "storage": {
    "icon": "󰋊",
    "icon_size": "14px",
    "label": true,
    "tooltip": true
  },
  "workspaces": {
    "count": 8,
    "hide_unoccupied": true,
    "reverse_scroll": false,
    "empty_scroll": false,
    "ignored": [-99]
  },
  "window_title": {
    "enable_icon": true,
    "truncation": true,
    "truncation_size": 50,
    "title_map": []
  },
  "updates": {
    "os": "arch"
  },
  "osd": {
    "enabled": true,
    "anchor": "bottom center",
    "duration": 1500
  },
  "keyboard": {
    "icon": "󰌌",
    "icon_size": "14px",
    "label": true,
    "tooltip": true
  },
  "task_bar": {
    "icon_size": 22
  },
  "language": {
    "length": 2
  },
  "mpris": {
    "length": 20,
    "format": "{artist} - {title}"
  },
  "system_tray": {
    "icon_size": 16,
    "ignore": []
  },
  "bluetooth": {
    "icon_size": 14,
    "label": true,
    "tooltip": true
  },
  "volume": {
    "icon_size": "14px",
    "label": true,
    "tooltip": true,
    "step_size": 5
  },
  "brightness": {
    "icon_size": "14px",
    "label": true,
    "tooltip": true,
    "step_size": 5
  },
  "power": {
    "icon": "󰐥",
    "icon_size": "18px",
    "tooltip": true
  },
  "theme_switcher": {
    "icon": "󰌌",
    "icon_size": "14px",
    "silent": false
  },
  "date_time": {
    "format": "%b %d %H:%M"
  },
  "notification": {
    "ignored": [],
    "anchor": "top right",
    "timeout": 5000,
    "count": 100
  },
  "recorder": {
    "path": "Videos/Screencasting",
    "tooltip": true,
    "icon_size": 16
  }
}
